<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:text="Start" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_start"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="6dp"
        android:text="Stop" />

    <!-- This button is a white space filler which all other buttons align around -->
    <Button
        android:id="@+id/whitespace"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0"/>

    <!-- Forward button -->
    <ImageButton
        android:id="@+id/forwardBtn"
        android:layout_above="@id/whitespace"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nav_forward"
        style="@style/controlBtn" />

    <!-- Backward button -->
    <ImageButton
        android:id="@+id/backwardBtn"
        android:layout_below="@id/whitespace"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nav_backward"
        style="@style/controlBtn" />

    <!-- Left button -->
    <ImageButton
        android:id="@+id/leftBtn"
        android:layout_toLeftOf="@id/whitespace"
        android:layout_centerVertical="true"
        android:src="@drawable/nav_left"
        style="@style/controlBtn" />

    <!-- Right button -->
    <ImageButton
        android:id="@+id/rightBtn"
        android:layout_toRightOf="@id/whitespace"
        android:layout_centerVertical="true"
        android:src="@drawable/nav_right"
        style="@style/controlBtn" />

</RelativeLayout>